@model LoginUser
<link rel="stylesheet" href="~/css/login.css">
<div class="row">
    <div class="col-7">

    <h1 class="mb-5" style="color: #e3f2fd;">Login to Your account</h1>
    <form asp-action="LoginUser" asp-controller="Home" method="post">
        <div class="form-group">
            <h5 class="mb-0" style="color: #e3f2fd;"><label asp-for="Email"></label></h5>
            <span class="text-danger" asp-validation-for="Email"></span>
            <input type="text" asp-for="Email" class="form-control">
        </div>
        <div class="form-group">
            <h5 class="mb-0" style="color: #e3f2fd;"><label asp-for="Password"></label></h5>
            <span class="text-danger" asp-validation-for="Password"></span>
            <input asp-for="Password" class="form-control">
        </div>
        <div class="text-center">
            <input type="submit" value="Submit" class="btn btn-primary btn-lg">
        </div>
    </form>
    </div>
    <div class="col-5 text-center">
        <h1 class="display-1" style="color: #e3f2fd;">FazeBank</h1>
        <img src="https://www.pinclipart.com/picdir/big/313-3132604_icons-save-money-clipart.png" width="300" alt="">
        <h2 class="mt-4" style="color: #e3f2fd;">What will you own someday?</h2>
        <h4 class="mt-5" style="color: #e3f2fd;">Need to Register?</h4>
        <a href="/" class="btn btn-primary btn-lg">Register Here</a>
    </div>
</div>